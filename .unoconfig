// Core config
Uno.Test: bin/uno-test.exe
Uno.Exe: bin/uno.exe

if WIN32 {
    Uno.AppLoader: bin/win
} else if MAC {
    Uno.AppLoader: bin/mac
}

// Package config
Packages.SourcePaths += lib

// Avoid overriding core settings when running an uno.exe other than 'bin/uno.exe',
// to make sure assembly paths remain consistent.
SkipIfNotRoot: true
